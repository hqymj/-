	local flags = {
		SA = "ğŸ‡¸ğŸ‡¦", EG = "ğŸ‡ªğŸ‡¬", AE = "ğŸ‡¦ğŸ‡ª", IQ = "ğŸ‡®ğŸ‡¶", JO = "ğŸ‡¯ğŸ‡´",
